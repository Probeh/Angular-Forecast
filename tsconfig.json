/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl"               : "./"            ,
    "declaration"           : false           ,
    "downlevelIteration"    : true            ,
    "experimentalDecorators": true            ,
    "importHelpers"         : true            ,
    "module"                : "es2020"        ,
    "moduleResolution"      : "node"          ,
    "outDir"                : "./dist/out-tsc",
    "resolveJsonModule"     : true            ,
    "sourceMap"             : true            ,
    "target"                : "es2015"        ,
    "lib": ["es2018", "dom"],
    "paths": {
      "@container/*"  : ["src/app/container/*"     ],
      "@favorites/*"  : ["src/app/favorites/*"     ],
      "@forecast/*"   : ["src/app/forecast/*"      ],
      "@search/*"     : ["src/app/search/*"        ],
      "@weather/*"    : ["src/app/weather/*"       ],
      "@constants/*"  : ["src/common/constants/*"  ],
      "@helpers/*"    : ["src/common/helpers/*"    ],
      "@services/*": ["src/common/services/*"],
      "@models/*"     : ["src/common/models/*"     ],
      "@assets/*": ["src/assets/*"      ],
      "@client/*": ["src/app/*"         ],
      "@common/*": ["src/common/*"      ],
      "@env/*"   : ["src/environments/*"]
    }
  }
}
